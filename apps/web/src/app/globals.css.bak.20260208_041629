}

/* ---- “Card” look ---- */
.card{
  @apply rounded-2xl border bg-white/90 backdrop-blur shadow-sm;
  border-color:#e5e7eb;
}

/* ---- Buttons ---- */
.btn{
  @apply inline-flex items-center gap-2 rounded-xl border px-4 py-2 text-sm transition;
  border-color:#e5e7eb;
}
.btn:hover{ @apply bg-neutral-50 shadow-sm translate-y-[-1px]; }
.btn:focus-visible{ outline:none; box-shadow:0 0 0 2px #fff,0 0 0 6px var(--brand); }

