/* WOS BIOSCIENCE TOKENS */
@layer base {
  :root {
    /* backgrounds + text */
    --bg-main: #fafaf8;          /* soft off-white, slightly warm */
    --bg-elev: #ffffff;          /* card surface */
    --text-main: #1f2933;        /* charcoal */
    --text-muted: #52616b;       /* calm secondary */
    --border-soft: #e6e8eb;      /* quiet dividers */

    /* accents (meaningful) */
    --accent-growth: #2f7d5c;    /* chlorophyll */
    --accent-teal:   #4f9da6;    /* membranes / water */
    --accent-amber:  #d4a72c;    /* revise / attention */
    --accent-slate:  #64748b;    /* neutral data */

    /* radii */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;

    /* subtle texture knobs */
    --noise-opacity: 0.035;
    --gradient-opacity: 0.12;
  }

  html, body {
    height: 100%;
  }

  body {
    color: var(--text-main);
    background: var(--bg-main);
    line-height: 1.55;
    text-rendering: geometricPrecision;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3 {
    letter-spacing: -0.01em;
  }
}

/* Subtle bioscience texture: faint gradient + gentle noise (barely noticeable) */
